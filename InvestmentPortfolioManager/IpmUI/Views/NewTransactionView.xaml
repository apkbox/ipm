        <TextBox HorizontalAlignment="Left" Margin="378,366,0,0" VerticalAlignment="Top" Width="354"/>
        <Label Content="Amount" HorizontalAlignment="Left" Margin="10,402,0,0" VerticalAlignment="Top"/>
