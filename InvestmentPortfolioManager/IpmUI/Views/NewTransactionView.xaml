        <TextBox HorizontalAlignment="Left" Margin="378,166,0,0" VerticalAlignment="Top" Width="354"/>
        <Label Content="Price" HorizontalAlignment="Left" Margin="90,201,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="90,227,0,0" VerticalAlignment="Top" Width="70"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top" Width="70"/>
