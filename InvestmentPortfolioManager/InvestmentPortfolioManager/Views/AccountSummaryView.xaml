<UserControl x:Class="InvestmentPortfolioManager.Views.AccountSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:InvestmentPortfolioManager.ViewModels"
             xmlns:mvvm="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="528" d:DesignWidth="909"
             d:DataContext="{d:DesignInstance vm:AccountSummaryViewModel, IsDesignTimeCreatable=False}"
             mvvm:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="149*"/>
        </Grid.RowDefinitions>
        <TextBlock Margin="0,10" Text="{Binding Name}" FontSize="24" HorizontalAlignment="Center" Width="162"/>

    </Grid>
</UserControl>
